<style>
    .social{
        cursor: pointer;
    }
    
    .pop{
        width: 200px;
        height: 200px;
        position: absolute;
        display: none;
        padding: 10px;
    }
</style>
<script>
    var pop = $('.pop_wechat');
    $('.social_wechat').on('click', function(e){
        e.stopPropagation();  
        pop.show();
    });

    $('.close').on('click', function(){
        pop.hide();
    });
    $(document).click(function(e){
        if(!pop.is(e.target) && pop.has(e.target).length === 0){
            pop.hide();
        }
    });
</script>
